# Terraform Backend Configuration
# Copy this file to backend.tf and customize with your S3 bucket details

terraform {
  backend "s3" {
    bucket  = "your-terraform-state-bucket"
    key     = "peddler/terraform.tfstate"
    region  = "us-east-1"

    # Optional: Enable state locking with DynamoDB
    # dynamodb_table = "terraform-state-lock"

    # Optional: Encrypt state file
    # encrypt = true
  }
}
