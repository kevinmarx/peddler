# Example environment file for local GitHub Actions testing
# Copy this to .env.local and fill in your actual values
# DO NOT commit .env.local to version control!

# AWS Credentials
AWS_ACCESS_KEY_ID=your-dev-access-key-id
AWS_SECRET_ACCESS_KEY=your-dev-secret-access-key
AWS_ACCESS_KEY_ID_PROD=your-prod-access-key-id
AWS_SECRET_ACCESS_KEY_PROD=your-prod-secret-access-key

# Peddler Configuration (JSON format)
PEDDLER_SECRETS={"facebook-cookies":"c_user=123;xs=abc","slack-webhook-url":"https://hooks.slack.com/services/..."}
PEDDLER_SECRETS_PROD={"facebook-cookies":"...","slack-webhook-url":"..."}

# Optional - for notifications and security scanning
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/your/webhook/url
CODECOV_TOKEN=your-codecov-token
SNYK_TOKEN=your-snyk-token

# Repository Variables (JSON format)
SCRAPERS_CONFIG={"scrapers":[{"id":"test","name":"Test Scraper","enabled":true,"marketplace":"facebook","query":"honda civic","location":"Seattle, WA","radius":25,"scrollDepth":3,"priceDropThreshold":0.1,"notifications":{"slack":{"enabled":true,"webhook":"slack-webhook-url-from-secrets"}}}]}

SCRAPERS_CONFIG_PROD={"scrapers":[{"id":"prod-test","name":"Production Test","enabled":false,"marketplace":"facebook","query":"toyota camry","location":"Portland, OR","radius":30,"scrollDepth":2,"priceDropThreshold":0.05,"notifications":{"slack":{"enabled":true,"webhook":"slack-webhook-url-from-secrets"}}}]}
