{
  "name": "peddler",
  "version": "1.0.0",
  "description": "Cloud-based alerting system for monitoring Facebook Marketplace and other marketplaces",
  "main": "index.js",
  "bin": {
    "peddler": "./bin/peddler"
  },
  "scripts": {
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "build": "tsc",
    "tf:init": "cd infrastructure && terraform init",
    "tf:plan": "cd infrastructure && terraform plan",
    "tf:apply": "cd infrastructure && terraform apply",
    "tf:destroy": "cd infrastructure && terraform destroy",
    "tf:format": "cd infrastructure && terraform fmt",
    "tf:validate": "cd infrastructure && terraform validate",
    "package": "npm run build && cd dist && mkdir -p lambdas && zip -r lambdas/scheduler.zip . -x 'lambdas/*' && zip -r lambdas/scraper.zip . -x 'lambdas/*' && zip -r lambdas/notifier.zip . -x 'lambdas/*'",
    "prepare": "npm run build"
  },
  "keywords": [
    "marketplace",
    "scraper",
    "alerts",
    "facebook-marketplace",
    "serverless",
    "aws"
  ],
  "author": "Kevin Marx",
  "license": "MIT",
  "devDependencies": {
    "@types/aws-lambda": "^8.10.119",
    "@types/jest": "^29.5.4",
    "@types/node": "^20.5.0",
    "@typescript-eslint/eslint-plugin": "^6.4.1",
    "@typescript-eslint/parser": "^6.4.1",
    "eslint": "^8.47.0",
    "jest": "^29.6.2",
    "ts-jest": "^29.1.1",
    "typescript": "^5.1.6"
  },
  "dependencies": {
    "@aws-sdk/client-dynamodb": "^3.395.0",
    "@aws-sdk/client-eventbridge": "^3.395.0",
    "@aws-sdk/client-secrets-manager": "^3.395.0",
    "@aws-sdk/client-ssm": "^3.395.0",
    "@aws-sdk/lib-dynamodb": "^3.395.0",
    "axios": "^1.5.0",
    "cheerio": "^1.0.0-rc.12",
    "commander": "^11.0.0",
    "playwright": "^1.37.0",
    "uuid": "^9.0.0"
  }
}
